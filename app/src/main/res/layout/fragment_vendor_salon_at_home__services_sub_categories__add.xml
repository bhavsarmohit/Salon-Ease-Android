                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/material_vendorName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_servicesArrowSubCategories"
                    android:layout_marginTop="10dp"
                    android:hint="Vendor Name"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="Category Name"
                    app:startIconDrawable="@drawable/ic_assignment_apply_for_vendor_service">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_vendorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/et_password"
                        android:scrollHorizontally="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/material_servicePrice"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/material_vendorName"
                    android:layout_marginTop="20dp"
                    android:hint="Service Price"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="Service Price"
                    app:startIconDrawable="@drawable/ic_assignment_apply_for_vendor_service">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_servicePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/et_password"
                        android:scrollHorizontally="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/material_productsUsed"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/material_servicePrice"
                    android:layout_marginTop="20dp"
                    android:hint="Products Used"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="Products Used"
                    app:startIconDrawable="@drawable/ic_assignment_apply_for_vendor_service">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_productsUsed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/et_password"
                        android:scrollHorizontally="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/material_serviceTime"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/material_productsUsed"
                    android:layout_marginTop="20dp"
                    android:hint="Service Time"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="Service Time"
                    app:startIconDrawable="@drawable/ic_assignment_apply_for_vendor_service">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_serviceTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/et_password"
                        android:scrollHorizontally="true" />

                </com.google.android.material.textfield.TextInputLayout>




                <LinearLayout
                    android:id="@+id/layout_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/material_serviceTime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:text="Done"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"

                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_addSubCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:text="Add Sub Category"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/layout_buttons" />


            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</FrameLayout>