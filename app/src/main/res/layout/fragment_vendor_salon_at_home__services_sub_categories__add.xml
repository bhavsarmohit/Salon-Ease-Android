                <TextView
                    android:id="@+id/tv_salonAtHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Salon At Home"
                    android:textColor="@color/purple_700"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout_servicesArrowSubCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/tv_salonAtHome"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service:"
                        android:textColor="@color/textview_green"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_arrow_forward"/>

                    <TextView
                        android:id="@+id/tv_subCategories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub-Categories"
                        android:textColor="@color/textview_green"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>


<!--                <TextView-->
