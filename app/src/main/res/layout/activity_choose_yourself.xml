<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chooseYourself">

    <TextView
        android:id="@+id/tv_chooseYourSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Choose Yourself"
        android:textColor="@color/textview"
        android:textSize="25dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_chooseYourSelf"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_customer"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="25dp"
                android:background="@drawable/border_selected">

                <ImageView
                    android:id="@+id/img_customer"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/customer" />

                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_customer"
                    android:layout_marginTop="20dp"
                    android:text="Customer"

                    android:textColor="@color/textview_green_dark"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_customer"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/img_customer"
                    android:text="Customers love nothing more than the sale." />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_vendor"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="25dp"
                android:background="@drawable/border_selected">

                <ImageView
                    android:id="@+id/img_vendor"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/vendor" />

                <TextView
                    android:id="@+id/tv_vendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_vendor"
                    android:layout_marginTop="20dp"
                    android:text="Vendor"

                    android:textColor="@color/textview_green_dark"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_vendor"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/img_vendor"
                    android:text="Customers love nothing more than the sale." />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>







</RelativeLayout>
</ScrollView>